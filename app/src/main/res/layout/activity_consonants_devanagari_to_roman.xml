            android:text="@string/la" />

        <Button
            android:id="@+id/btnVa"
            style="@style/btnCharRoman"
            android:text="@string/va" />

    </LinearLayout>

    <LinearLayout style="@style/btnRow">

        <Button
            android:id="@+id/btnSaPalatal"
            style="@style/btnCharRoman"
            android:text="@string/śa" />

        <Button
            android:id="@+id/btnSaRetro"
            style="@style/btnCharRoman"
            android:text="@string/ṣa" />

        <Button
            android:id="@+id/btnSa"
            style="@style/btnCharRoman"
            android:text="@string/sa" />

        <Button
            android:id="@+id/btnHa"
            style="@style/btnCharRoman"
            android:text="@string/ha" />

    </LinearLayout>

</LinearLayout>